<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainAppController">
    <children>
        <!-- MenuBar at the top -->
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Run" />
                        <MenuItem text="Stop" />
                        <MenuItem text="Exit" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- Main Content SplitPane -->
        <SplitPane dividerPositions="0.79" VBox.vgrow="ALWAYS">
            <items>
                <!-- Grid Panel -->
                <AnchorPane fx:id="gridPanel" style="-fx-background-color: lightgray;">
                    <!-- Placeholder for the grid content -->
                </AnchorPane>

                <!-- Control Panel -->
                <AnchorPane>
                    <children>
                        <SplitPane dividerPositions="0.2" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <items>
                                <!-- Setup Panel -->
                                <AnchorPane>
                                    <children>
                                        <Label layoutX="14.0" layoutY="14.0" text="Grid Size" />
                                        <TextField fx:id="gridSizeInput" layoutX="15.0" layoutY="32.0" prefHeight="26.0" prefWidth="158.0" />
                                        <Button fx:id="resetButton" layoutX="15.0" layoutY="71.0" onAction="#onReset" text="Reset" />
                                        <Button fx:id="generateButton" layoutX="67.0" layoutY="71.0" onAction="#onGenerate" text="Generate" />
                                        <Button fx:id="runButton" layoutX="138.0" layoutY="71.0" onAction="#onRun" text="Run" />
                                    </children>
                                </AnchorPane>

                                <!-- Statistics Panel -->
                                <AnchorPane>
                                    <children>
                                        <Label layoutX="14.0" layoutY="14.0" text="Statistics">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font></Label>
                              <Label layoutX="15.0" layoutY="43.0" text="Runtime:" />
                              <ListView layoutX="6.0" layoutY="76.0" prefHeight="454.4" prefWidth="207.2" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</VBox>
